<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.sincq.itsblog.dao.TagMapper">
    <resultMap id="Tag" type="org.sincq.itsblog.entity.Tag">
        <id column="id" property="id" />
        <result column="name" property="name" />
    </resultMap>

    <insert id="insertTag" parameterType="org.sincq.itsblog.entity.Tag">
        insert into t_tag values (#{id}, #{name})
    </insert>

    <delete id="deleteTagById" parameterType="java.lang.Integer">
        delete from t_tag
        where id= #{id}
    </delete>

    <delete id="deleteTagByName" parameterType="java.lang.String">
        delete from t_tag
        where name = #{name}
    </delete>

    <update id="updateTagById">
        update t_tag
        <set>
            <if test="name != null">
                'name' = #{name},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="getTagById" parameterType="java.lang.Integer" resultType="org.sincq.itsblog.entity.Tag">
        select *
        from t_tag
        where id=#{id}
    </select>
    <select id="getTagByName" parameterType="java.lang.String" resultType="org.sincq.itsblog.entity.Tag">
        select *
        from t_tag
        where name=#{name}
    </select>
    <select id="getAllTag" resultType="org.sincq.itsblog.entity.Tag">
        select *
        from t_tag
    </select>
</mapper>